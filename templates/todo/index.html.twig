<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="{{ asset('node_modules/bootstrap/dist/css/bootstrap.css') }}">
    <title>Document</title>
</head>
<body>

{% for infoMessage in app.session.flashBag.get('info') %}
<div class="alert alert-info">
{{ infoMessage }}
</div>
{% endfor %}

{% for errorMessage in app.session.flashBag.get('error') %}
<div class="alert alert-danger">
{{ errorMessage }}
</div>
{% endfor %}

{% for successMessage in app.session.flashBag.get('success') %}
<div class="alert alert-success">
{{ successMessage }}
</div>
{% endfor %}

<h1>Liste des todos</h1>
<ol class="list-group">
    {% for name,content in app.session.get('todo') %}
        <li class="list-group-item">
        {{ name }} : {{ content }}
        </li>
    {% endfor %}
</ol>
    
</body>
</html>